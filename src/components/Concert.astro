---
const {venue, notes, url, date, index} = Astro.props

const dateString = new Date(date).toLocaleDateString('en-US', {
    year: "numeric",
    month: "numeric",
    day: "numeric"
})
---
    <a href={url} class={`contents group ${index % 2 === 0 ? 'bg-black/50' : ''} `}>
        <div class="group-hover:scale-110 transition duration-110 group-hover:text-red">{venue}</div>
        <div class="group-hover:scale-110 transition duration-110 group-hover:text-red">{dateString}</div>
        <div class="group-hover:scale-110 transition duration-110 group-hover:text-red">{notes}</div>
    </a>