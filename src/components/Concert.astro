---
const {venue, note, url, date} = Astro.props
const dateOptions = {
    year: "numeric",
    month: "numeric",
    day: "numeric"
}
const dateString = date;
const newDate = new Date(dateString).toLocaleString('en-US', {
    year: "numeric",
    month: "numeric",
    day: "numeric"
}); 
---

<a href={url} class="contents group">
    <div class="group-hover:scale-110 transition duration-110 group-hover:text-red">{venue}</div>
    <div class="group-hover:scale-110 transition duration-110 group-hover:text-red">{newDate}</div>
    <div class="group-hover:scale-110 transition duration-110 group-hover:text-red">{note}</div>
</a>

