---
import { Image } from "astro:assets";
const {title, img, date, width, height, tracklist} = Astro.props
---
<div class="border-2 border-red flex flex-col md:flex-row items-center p-4">
        <Image class="w-full aspect-square object-cover" src={img} width={width} height={height} alt={`Image of ${title}`}/>
        <div class="flex flex-col px-4">
            <h2 class="font-bangers text-2xl">{title}<h2>
            <span class="italic text-black/50">{date}</span>
        </div>
    <ul class="md:w-1/2">{tracklist.map(listItem => (
            <li>{listItem}</li>
        ))}
    </ul>
</li>