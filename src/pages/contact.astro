---
import Layout from "../layouts/Layout.astro"
---
<Layout>
  <div>
    <form class="mt-10 md:mt-0 flex flex-col w-full gap-4 p-8 mx-auto border-8 md:w-1/3 border-red" name="contact" id="contact" data-netlify="true">
      <h1 class="text-4xl font-bangers">Contact Skunch</h1>
      <div class="flex flex-col">
        <span>Name:</span>
        <label for="name">
          <input required class="w-full px-2" name="name" id="name" type="text">
        </label>
      </div>
      <div class="flex flex-col">
        <span>Email:</span>
        <label for="email">
          <input required class="w-full px-2" name="email" id="email" type="email">
        </label>
      </div>
      <div class="flex flex-col">
        <span>Subject:</span>
        <label for="subject">
          <input required class="w-full px-2" name="subject" id="subject" type="text">
        </label>
      </div>
      <div class="flex flex-col">
        <span>Message</span>
        <label for="message">
          <textarea required class="w-full px-2" name="message" id="message" cols="30" rows="4"></textarea>
        </label>
      </div>
      <div class="mx-auto w-full" data-netlify-recaptcha="true"></div>
      <button class="border-4 border-red rounded-full font-extrabold py-2 px-4 w-32 mx-auto uppercase transition duration-150 hover:bg-red hover:text-white" type="submit">submit</button>
    </form>
  </div>
</Layout>